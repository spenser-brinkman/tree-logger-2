<center>
<h2>Start a new survey</h2>

<%= form_with model: @survey, url: property_surveys_path(@survey.property) do |f| %>
  <%= f.label :date %>
  <%= f.date_field :date, min: "2020-01-01", max: today, value: today %>
  <br><br>
  <%= f.submit "Start new survey", class: "button" %>
<% end %>
</center>