<h2>Edit survey from <%= humanize_date(@survey.date) %></h2>

<center>
<%= form_with model: @survey do |f| %>
  <%= f.label :date, "Survey Date:" %>
  <%= f.date_field :date, min: "2020-01-01", max: today, value: @survey.date %>
  <br>
  <%= f.submit "Update Survey Date", class: "button" %>
<% end %>

<%= link_to "Delete this survey", delete_survey_path(survey: @survey), class: "button small discrete" %>
</center>