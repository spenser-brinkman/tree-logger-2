<%= link_to "Log in with Google", '/auth/google_oauth2' %>
<br>
OR
<br>
Log in with your TreeLogger credentials:
<br>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prevented you from logging in:</h2>

    <ul>
      <% @user.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @user, url: login_path do |f| %>
  <%= f.label :email %><br>
  <%= f.text_field :email %><br>
  <%= f.label :password %><br>
  <%= f.text_field :password %><br>
  <%= f.submit "Log In" %>
<% end %>