<h2>Log In</h2>

<div style="color:#FF0000">
<% if @error.present? %>
  <%= @error %>
  <br><br>
<% end %>
</div>

<%= form_with model: @user, url: login_path, method: "post" do |f| %>
  <table>
    <tr>
      <td style="text-align: right;"><%= f.label :email %>&nbsp;</td>
      <td><%= f.text_field :email, required: true %></td>
    </tr>
    <tr><td><br></td></tr>

    <tr>
      <td style="text-align: right;"><%= f.label :password %>&nbsp;</td>
      <td><%= f.password_field :password, required: true %></td>
    </tr>
    <tr><td><br></td></tr>

  </table>

  <%= f.button "Log In", class: "button small" %>
<% end %>

<br><br><br>
Created your account through Google?
<%= form_tag('/auth/google_oauth2', method: 'post') do %>
  <button class="button small" type='submit'>Log In With Google</button>
<% end %>

<br>
Don't have an account?
<%= form_tag('/users/new', method: 'get') do %>
  <button class="button small" type='submit'>Create an Account</button>
<% end %>
