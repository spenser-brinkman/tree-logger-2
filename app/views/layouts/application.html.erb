<!DOCTYPE html>
<html>
  <head>
    <title>TreeLogger2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%#= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <br><div class="wrapper">

      <header>
        
        <span style="font-size:300%">
        <% if !logged_in? %>
          <a class="homeLink" href="/">
        <% else %>
          <a class="homeLink" href="<%= user_path(current_user) %>">
        <% end %>
            <img src="/images/logo.png" alt="TreeLogger Logo" width="auto" height="35"><strong>TreeLogger</strong>
          </a>
        </span>
        <span style="float:right;">
        <% if logged_in? %>
          <span><%= link_to "Properties", properties_path, class: "button small" %></span>
          <span><%= link_to "Home Page", user_path(current_user), class: "button small" %></span>
          <span><%= link_to "Log Out", logout_path, class: "button small" %></span>
        <% end %>
        </span>
      </header>
      <br>
        <center>
        <%= yield %>
        </center>
      <footer class="branding">
        <small>&copy; 2020 <strong>TreeLogger</strong></small>
      </footer>
    </div>
  </body>
</html>
