<%= form_with model: @tree, url: property_trees_path(@property, survey_id: params[:survey]) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br><br><br>
  <%= f.label :species_id %>
  <%= f.collection_select :species_id, Species.all, :id, :name, include_blank: "Other (fill in box below)" %>
  <br><br>
  <%= f.fields_for :species, Species.new do |sf| %>
    <%= sf.label :name, "New species" %>
    <%= sf.text_field :name, placeholder: "Fill if species is not listed" %>
  <% end %>
  <br><br>
  <%= f.submit "Start new survey" %>
<% end %>