<% byebug %>
New Tree
<br>
<br>
<%= form_with model: @tree, url: survey_trees_path(@tree.surveys) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :height %>
  <%= f.text_field :height %>
  <br>
  <%= f.label :dbh %>
  <%= f.text_field :dbh %>
  <br>
  <%= f.label :foliage %>
  <%= f.select :foliage, ["Abundant", "Normal", "Sparse", "Bare/Dead"], include_blank: "- Make a selection -" %>
  <br>
  <%= f.label :comments %>
  <%= f.text_area :comments %>
  <br>
  <%= f.label :species %>
  <%= f.collection_select :species, Species.all, :id, :name, include_blank: "Other" %>
  <br>
  <br>
  <%= f.fields_for :species do |sf| %>
    <%= sf.label :name, "Species" %>
    <%= sf.text_field :name %>
  <% end %>
  <br>
  <%= f.submit "Start new survey" %>
<% end %>